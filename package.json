{
  "name": "pantrypal",
  "version": "1.3.1",
  "description": "PantryPal - Smart Pantry Management System",
  "private": true,
  "scripts": {
    "bump-version": "node scripts/bump-version.js",
    "docker:build": "docker-compose build",
    "docker:build:multiarch": "./scripts/docker-build-multiarch.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:push": "./scripts/docker-push.sh",
    "docker:rebuild": "npm run docker:down && npm run docker:build && npm run docker:up",
    "docker:deploy": "npm run docker:build && npm run docker:push",
    "docker:deploy:multiarch": "npm run docker:build:multiarch",
    "mobile:build:ios": "cd mobile && eas build --platform ios --auto-submit",
    "mobile:build:android": "cd mobile && eas build --platform android --auto-submit",
    "mobile:build:all": "cd mobile && eas build --platform all --auto-submit",
    "release:patch": "npm run bump-version patch && npm run docker:build:multiarch",
    "release:minor": "npm run bump-version minor && npm run docker:build:multiarch",
    "release:major": "npm run bump-version major && npm run docker:build:multiarch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/pantrypal.git"
  },
  "keywords": [
    "pantry",
    "inventory",
    "food-management",
    "expiry-tracker"
  ],
  "author": "",
  "license": "MIT"
}
